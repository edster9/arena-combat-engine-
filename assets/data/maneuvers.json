    "t_stop": {
      "id": "t_stop",
      "name": "T-Stop",
      "difficulty": 1,
      "difficulty_per_10mph": 1,
      "description": "Emergency stop with 90-degree rotation",
      "goals": {
        "final_speed": 0,
        "heading_delta": 90,
        "stop_distance_short": true
      },
      "tolerances": {
        "heading_degrees": 15,
        "speed_tolerance_mph": 2
      },
      "control_hints": {
        "steering": "full_lock",
        "throttle": "off",
        "brake": "maximum_with_ebrake"
      },
      "speed_requirements": {
        "min_mph": 5,
        "max_mph": 60
      }
    },

    "pivot": {
      "id": "pivot",
      "name": "Pivot",
      "difficulty": 0,
      "description": "Low-speed rotation around rear corner",
      "goals": {
        "heading_delta_variable": true,
        "pivot_point": "rear_corner",
        "speed_must_be": 5
      },
      "tolerances": {
        "heading_degrees": 10,
        "position_meters": 1.0
      },
      "control_hints": {
        "steering": "full_lock",
        "throttle": "creep",
