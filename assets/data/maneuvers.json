    },

    "bootlegger": {
      "id": "bootlegger",
      "name": "Bootlegger (J-Turn)",
      "difficulty": 7,
      "description": "180-degree spin reversal - the hardest maneuver",
      "goals": {
        "heading_delta": 180,
        "final_direction": "reversed",
        "controlled_spin": true
      },
      "tolerances": {
        "heading_degrees": 20,
        "position_meters": 5.0
      },
      "control_hints": {
        "steering": "full_lock_initiate_spin",
        "throttle": "off_then_power_out",
        "brake": "ebrake_to_break_traction"
      },
      "speed_requirements": {
        "min_mph": 20,
        "max_mph": 35,
        "notes": "Must be between 20-35 mph to attempt"
      },
      "execution_phases": [
        {"phase": "initiate", "action": "ebrake + full steering", "duration": 0.3},
        {"phase": "rotate", "action": "maintain steering, modulate ebrake", "duration": 0.4},
        {"phase": "exit", "action": "release, countersteer, throttle", "duration": 0.3}
      ]
    }
  },

  "evaluation": {
    "success_levels": {
      "perfect": {"heading_pct": 0.5, "position_pct": 0.5},
      "good": {"heading_pct": 0.75, "position_pct": 0.75},
      "partial": {"heading_pct": 1.0, "position_pct": 1.0},
      "failed": "exceeds tolerances"
    },
    "notes": [
      "Perfect: within 50% of tolerance",
      "Good: within 75% of tolerance",
      "Partial: within 100% of tolerance",
      "Failed: exceeded tolerance - loss of control"
    ]
  }
}