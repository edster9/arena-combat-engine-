      "goals": {
        "allow_slip": true,
        "max_slip_angle": 45,
        "heading_delta_variable": true,
        "skid_distance_inches": [0.25, 0.5, 0.75, 1.0]
      },
      "tolerances": {
        "heading_degrees": 20,
        "position_meters": 2.0
      },
      "control_hints": {
