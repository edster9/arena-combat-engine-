{
  "_meta": {
    "description": "Maneuver goal definitions for physics-based turn execution",
    "notes": [
      "Each maneuver defines goals the script tries to achieve in 1 second",
      "Success is evaluated at turn end based on tolerances",
      "Scripts apply controls (steering, throttle, brake) to reach goals",
      "tabletop scale: 1 inch = 4.572 meters"
    ],
    "units": {
      "distance": "meters",
      "angle": "degrees",
      "speed": "m/s",
      "time": "seconds"
    }
  },

  "scale": {
    "inch_to_meters": 4.572,
    "quarter_inch": 1.143,
    "half_inch": 2.286,
    "three_quarter_inch": 3.429
  },

  "maneuvers": {
    "straight": {
      "id": "straight",
      "name": "Straight",
      "difficulty": 0,
      "description": "Maintain heading, no lateral movement",
      "goals": {
        "heading_delta": 0,
        "lateral_offset": 0
      },
      "tolerances": {
        "heading_degrees": 5,
        "lateral_meters": 0.5
      },
      "control_hints": {
        "steering": "center",
        "throttle": "maintain_speed",
        "brake": "none"
      },
      "speed_requirements": {
        "min_mph": 0,
        "max_mph": 999
      }
    },

    "drift": {
      "id": "drift",
      "name": "Drift",
      "difficulty": 1,
