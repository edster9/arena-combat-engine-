{
  "_meta": {
    "description": "Proposed vehicle format - Equipment-based definition",
    "notes": [
      "Vehicles reference equipment by ID from equipment/*.json files",
      "ODE physics values calculated from equipment at load time",
      "Model is separate from chassis - allows different body styles per frame"
    ]
  },

  "_translation_layer": {
    "_notes": "Conversion formulas - ODE values come from equipment files directly",
    "weight": {
      "conversion": "kg = lbs * 0.453592"
    },
    "speed": {
      "conversion": "m/s = mph * 0.44704",
      "top_speed_electric": "360 * PF / (PF + weight_lbs)",
      "top_speed_gas": "240 * PF / (PF + weight_lbs)"
    },
    "acceleration_tiers": {
      "underpowered": { "pf_ratio": "<0.33", "mph_per_turn": 0 },
      "tier_5":  { "pf_ratio": ">=0.33", "mph_per_turn": 5 },
      "tier_10": { "pf_ratio": ">=0.50", "mph_per_turn": 10 },
      "tier_15": { "pf_ratio": ">=1.00", "mph_per_turn": 15 }
    }
  },

  "_proposed_format": {
    "id": "killer_kart",
    "name": "Killer Kart",
    "description": "Basic subcompact dueling vehicle",

    "model": {
      "_notes": "3D model and wheel well positions - separate from chassis type",
      "body": "sports_hatch_a",
      "chassis_dimensions": {
        "length": 4.2,
        "width": 1.8,
        "height": 0.8
      },
      "wheel_wells": [
        { "id": "FL", "position": [1.4, -0.2, 0.8] },
        { "id": "FR", "position": [1.4, -0.2, -0.8] },
        { "id": "RL", "position": [-1.4, -0.2, 0.8] },
        { "id": "RR", "position": [-1.4, -0.2, -0.8] }
      ]
    },

    "chassis": {
      "_notes": "Car Wars chassis type - determines weight, max_load, spaces, HC",
      "body": "subcompact",
      "modifier": "chassis_standard",
      "frame": "frame_standard"
    },

    "power_plant": {
      "_notes": "Determines power_factor, weight, top speed formula",
      "type": "electric_medium"
    },

    "tires": {
      "_notes": "Determines DP, weight, cost - physics from defaults or override",
      "type": "tire_standard_car",
      "wheels": [
        { "id": "FL", "radius": 0.35, "width": 0.2 },
        { "id": "FR", "radius": 0.35, "width": 0.2 },
        { "id": "RL", "radius": 0.35, "width": 0.2 },
        { "id": "RR", "radius": 0.35, "width": 0.2 }
      ]
    },

    "suspension": {
      "_notes": "Determines HC bonus, ODE erp/cfm values",
      "type": "suspension_standard"
    },

    "axles": [
      {
        "id": "front",
        "wheels": ["FL", "FR"],
        "steering": true,
        "driven": false,
        "max_steer_angle": 0.5
      },
      {
        "id": "rear",
        "wheels": ["RL", "RR"],
        "steering": false,
        "driven": true
      }
    ],

    "drivetrain": {
      "_notes": "Could be derived from power_plant or specified",
      "type": "RWD",
      "max_speed": 80.0,
      "motor_force": 3000.0,
      "brake_force": 5000.0
    }
  },

  "_alternate_model_example": {
    "_notes": "Same subcompact chassis, different body style with different wheel positions",
    "id": "street_racer",
    "name": "Street Racer",

    "model": {
      "body": "lowrider_coupe_b",
      "chassis_dimensions": {
        "length": 4.0,
        "width": 1.9,
        "height": 0.6
      },
      "wheel_wells": [
        { "id": "FL", "position": [1.2, -0.15, 0.85] },
        { "id": "FR", "position": [1.2, -0.15, -0.85] },
        { "id": "RL", "position": [-1.3, -0.15, 0.85] },
        { "id": "RR", "position": [-1.3, -0.15, -0.85] }
      ]
    },

    "chassis": {
      "body": "subcompact",
      "modifier": "chassis_light",
      "frame": "frame_carbon_aluminum"
    },

    "power_plant": {
      "type": "electric_large"
    },

    "tires": {
      "type": "tire_standard_car",
      "modifiers": ["mod_racing_slick"],
      "wheels": [
        { "id": "FL", "radius": 0.30, "width": 0.25 },
        { "id": "FR", "radius": 0.30, "width": 0.25 },
        { "id": "RL", "radius": 0.32, "width": 0.28 },
        { "id": "RR", "radius": 0.32, "width": 0.28 }
      ]
    },

    "suspension": {
      "type": "suspension_heavy"
    },

    "axles": [
      {
        "id": "front",
        "wheels": ["FL", "FR"],
        "steering": true,
        "driven": true,
        "max_steer_angle": 0.45
      },
      {
        "id": "rear",
        "wheels": ["RL", "RR"],
        "steering": false,
        "driven": true
      }
    ],

    "drivetrain": {
      "type": "AWD"
    }
  },

  "_six_wheel_example": {
    "_notes": "Pickup with 6 wheels - extra heavy chassis requires it",
    "id": "war_truck",
    "name": "War Truck",

    "model": {
      "body": "armored_pickup",
      "chassis_dimensions": {
        "length": 5.5,
        "width": 2.2,
        "height": 1.2
      },
      "wheel_wells": [
        { "id": "FL", "position": [2.0, -0.3, 1.0] },
        { "id": "FR", "position": [2.0, -0.3, -1.0] },
        { "id": "ML", "position": [-0.8, -0.3, 1.0] },
        { "id": "MR", "position": [-0.8, -0.3, -1.0] },
        { "id": "RL", "position": [-2.0, -0.3, 1.0] },
        { "id": "RR", "position": [-2.0, -0.3, -1.0] }
      ]
    },

    "chassis": {
      "body": "pickup",
      "modifier": "chassis_extra_heavy",
      "frame": "frame_standard",
      "body_modifiers": ["body_six_wheel"]
    },

    "power_plant": {
      "type": "gas_350cid"
    },

    "tires": {
      "type": "tire_heavy_duty_car",
      "wheels": [
        { "id": "FL", "radius": 0.45, "width": 0.25 },
        { "id": "FR", "radius": 0.45, "width": 0.25 },
        { "id": "ML", "radius": 0.45, "width": 0.25 },
        { "id": "MR", "radius": 0.45, "width": 0.25 },
        { "id": "RL", "radius": 0.45, "width": 0.25 },
        { "id": "RR", "radius": 0.45, "width": 0.25 }
      ]
    },

    "suspension": {
      "type": "suspension_heavy"
    },

    "axles": [
      {
        "id": "front",
        "wheels": ["FL", "FR"],
        "steering": true,
        "driven": false,
        "max_steer_angle": 0.4
      },
      {
        "id": "middle",
        "wheels": ["ML", "MR"],
        "steering": false,
        "driven": true
      },
      {
        "id": "rear",
        "wheels": ["RL", "RR"],
        "steering": false,
        "driven": true
      }
    ],

    "drivetrain": {
      "type": "RWD"
    }
  }
}