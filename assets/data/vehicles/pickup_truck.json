 {
  "name": "Pickup Truck",
  "description": "Pickup truck with V8 - heavier but more cargo space",
  "class": "wheeled",

  "chassis": "pickup",

  "drivetrain": {
    "type": "single_motor",
    "power_plant": "gas_350cid_turbo",
    "gearbox": "gearbox_performance",
    "driven_axles": ["front", "rear"]
  },

  "tires": [
    {
      "id": "front_tires",
      "wheels": ["FL", "FR"],
      "type": "tire_standard",
      "modifiers": ["mod_offroad"],
      "size": { "radius": 0.35, "width": 0.25 }
    },
    {
      "id": "rear_tires",
      "wheels": ["RL", "RR"],
      "type": "tire_standard",
      "modifiers": ["mod_offroad"],
      "size": { "radius": 0.35, "width": 0.25 }
    }
  ],

  "axles": [
    {
      "id": "front",
      "wheels": ["FL", "FR"],
      "suspension": "suspension_improved",
      "brakes": "brakes_standard",
      "steering": true,
      "max_steer_angle": 0.5
    },
    {
      "id": "rear",
      "wheels": ["RL", "RR"],
      "suspension": "suspension_improved",
      "brakes": "brakes_standard",
      "steering": false
    }
  ],

  "scripts": [
    {
      "name": "freestyle_assist",
      "path": "scripts/freestyle_assist.lua",
      "enabled": true,
      "options": {
        "abs_enabled": false,
        "abs_min_speed": 2.2,
        "tcs_enabled": true,
        "esc_enabled": false
      }
    },
    {
      "name": "turn_executor",
      "path": "scripts/turn_executor.lua",
      "enabled": true,
      "options": {
        "default_duration": 1.0
      }
    },
    {
      "name": "tests",
      "path": "scripts/tests.lua",
      "enabled": true,
      "options": {}
    }
  ]
}
