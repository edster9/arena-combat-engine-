{
  "name": "Gas Test Car",
  "description": "Compact with 100 cid gas engine - target 10 mph/s (6s 0-60)",
  "class": "wheeled",

  "chassis": {
    "body": "compact",
    "modifier": "chassis_standard",
    "frame": "frame_standard"
  },

  "wheels": [
    { "id": "FL", "position": [1.4, -1, 1.3], "tire": "front_tires" },
    { "id": "FR", "position": [1.4, -1, -1.3], "tire": "front_tires" },
    { "id": "RL", "position": [-1.3, -1, 1.3], "tire": "rear_tires" },
    { "id": "RR", "position": [-1.3, -1, -1.3], "tire": "rear_tires" }
  ],

  "tires": [
    {
      "id": "front_tires",
      "type": "tire_standard",
      "modifiers": ["mod_radial"],
      "size": { "radius": 0.35, "width": 0.2 }
    },
    {
      "id": "rear_tires",
      "type": "tire_standard",
      "modifiers": ["mod_radial"],
      "size": { "radius": 0.35, "width": 0.2 }
    }
  ],

  "axles": [
    {
      "id": "front",
      "wheels": ["FL", "FR"],
      "suspension": "suspension_improved",
      "steering": true,
      "max_steer_angle": 0.5
    },
    {
      "id": "rear",
      "wheels": ["RL", "RR"],
      "suspension": "suspension_improved",
      "steering": false
    }
  ],

  "drivetrain": {
    "type": "single_motor",
    "gearbox": "gearbox_standard",
    "power_plant": "gas_50cid",
    "driven_axles": ["front", "rear"]
  }
}
