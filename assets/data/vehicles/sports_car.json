{
  "name": "Turbo Muscle Car",
  "description": "Compact with twin-turbo 350 V8 - target sub-4s 0-60 (Corvette Z06 class)",
  "class": "wheeled",

  "chassis": {
    "body": "compact",
    "modifier": "chassis_standard",
    "frame": "frame_standard",
    "length": 4.2,
    "width": 1.9,
    "height": 0.9
  },

  "drivetrain": {
    "type": "single_motor",
    "power_plant": "gas_350cid_turbo",
    "gearbox": "gearbox_performance",
    "driven_axles": ["front", "rear"]
  },

  "wheels": [
    { "id": "FL", "position": [1.2, -0.45, 0.85], "tire": "front_tires" },
    { "id": "FR", "position": [1.2, -0.45, -0.85], "tire": "front_tires" },
    { "id": "RL", "position": [-1.2, -0.45, 0.85], "tire": "rear_tires" },
    { "id": "RR", "position": [-1.2, -0.45, -0.85], "tire": "rear_tires" }
  ],

  "tires": [
    {
      "id": "front_tires",
      "type": "tire_standard",
      "modifiers": ["mod_racing_slick"],
      "size": { "radius": 0.32, "width": 0.22 }
    },
    {
      "id": "rear_tires",
      "type": "tire_standard",
      "modifiers": ["mod_racing_slick"],
      "size": { "radius": 0.32, "width": 0.22 }
    }
  ],

  "axles": [
    {
      "id": "front",
      "wheels": ["FL", "FR"],
      "suspension": "suspension_improved",
      "brakes": "brakes_standard",
      "steering": true,
      "max_steer_angle": 0.5
    },
    {
      "id": "rear",
      "wheels": ["RL", "RR"],
      "suspension": "suspension_improved",
      "brakes": "brakes_standard",
      "steering": false
    }
  ],

  "scripts": [
    {
      "name": "freestyle_assist",
      "path": "scripts/freestyle_assist.lua",
      "enabled": true,
      "options": {
        "abs_enabled": false,
        "abs_min_speed": 2.2,
        "tcs_enabled": true,
        "esc_enabled": false
      }
    },
    {
      "name": "turn_executor",
      "path": "scripts/turn_executor.lua",
      "enabled": true,
      "options": {
        "default_duration": 1.0
      }
    },
    {
      "name": "tests",
      "path": "scripts/tests.lua",
      "enabled": true,
      "options": {}
    }
  ]
}
