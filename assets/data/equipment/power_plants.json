  "_meta": {
    "description": "Car Wars power plants - electric and gas engines",
    "source": "Car Wars Compendium 2nd Edition, Uncle Albert's Catalog",
    "units": {
      "cost": "dollars",
      "weight": "lbs",
      "spaces": "vehicle spaces",
      "power_factors": "PF for acceleration calculation"
    },
    "acceleration_rules": {
      "underpowered": "PF < 1/3 weight = won't move",
      "5_mph": "PF >= 1/3 and < 1/2 weight",
      "10_mph": "PF >= 1/2 and < weight",
      "15_mph": "PF >= weight",
      "20_mph": "PF >= 2x weight (nuclear only)",
      "25_mph": "PF >= 3x weight (nuclear only)"
    },
    "top_speed_formula": {
      "electric": "360 * PF / (PF + weight)",
      "gas": "240 * PF / (PF + weight)"
    },
    "physics_translation": {
      "_notes": "Conversion from Car Wars values to physics engine values",
      "motor_force": "Optional override in Newtons. If not set, defaults to power_factors * 2.5",
      "power_factors": "Car Wars reference value (read-only for display/rules)",
      "weight_to_mass": "lbs * 0.453592 (kg)",
      "top_speed_to_velocity": "mph * 0.44704 (m/s)"
    }
  },

